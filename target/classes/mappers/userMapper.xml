<select id = "selectMainByUidComment" parameterType="string" resultType="UserVO">
	SELECT DISPLAY_NAME as displayName, PHOTO_URL as photoUrl
		FROM USER_TB
	WHERE USER_UID = #{userUid}
</select>

<insert id="insertUser" parameterType="UserVO">
	INSERT INTO USER_TB
	(USER_UID,DISPLAY_NAME,PHOTO_URL,EMAIL,PROVIDER_UID,PROVIDER_NAME,PROVIDER_DISPLAY_NAME,PROVIDER_PHOTO_URL,PROVIDER_EMAIL,BGPHOTO_URL,LOCATION_NO,PHONE_NUMBER,WEBSITE_URL,INTRODUCE,BIRTHDAY,REG_DATE)
	VALUES ( #{userUid}, #{displayName}, #{photoUrl}, #{email}, #{providerUid},#{providerName},#{providerName},#{providerDisplayName},#{providerPhotoUrl},#{providerEmail},#{locationNo},#{phoneNumber},#{websiteUrl},#{introduce},#{birthday},#{regDate}) 
</insert>

<update id="updateUser" parameterType="UserVO">
	update user_tb set DISPLAY_NAME = #{displayName}, PHOTO_URL = #{photoUrl}, EMAIL = #{email}, BGPHOTO_RUL = #{bgphotoUrl}, LOCATION_NO = #{locationNo}, PHONE_NUMBER = #{phoneNumber}, WEBSITE_URL = #{websiteUrl}, INTRODUCE = #{introduce}, BIRTHDAY = #{birthday}, REG_DATE = #{regDate}
	where USER_UID = #{userUid}
</update>

</mapper>